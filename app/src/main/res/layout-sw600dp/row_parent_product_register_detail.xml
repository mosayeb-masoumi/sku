<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:descendantFocusability="beforeDescendants"

    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorTextDark"
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/row_txtTitleTypeTextParent"
            android:text="title"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlFlavour_row_parent_registerDatail"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/row_edtTitleTypeTextParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/spiner_background"
            android:gravity="center"



            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:padding="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorTextDark"
            android:textColorHint="@color/colorText"
            android:textDirection="ltr"
            android:visibility="gone"
            android:textSize="@dimen/_12ssp" />





        <RelativeLayout
            android:id="@+id/rlSpn_row_parent_registerDatail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/txt_shop"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/spiner_background"
            android:layoutDirection="rtl"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:visibility="gone">

            <Spinner
                android:id="@+id/spinnerRowParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <requestFocus />
            </Spinner>
        </RelativeLayout>




    </RelativeLayout>


</LinearLayout>