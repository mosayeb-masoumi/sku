<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_bg"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/row_img_barcodelist"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_150sdp"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/_5sdp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/row_txt_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" برند"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_brand"
                android:text="برند:"
                android:textSize="@dimen/_12sdp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/row_txt_sub_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" زیر برند"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="زیر برند:"
                android:textSize="@dimen/_12sdp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/row_txt_productCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" برند"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_brand"
                android:text="خانواده محصول:"
                android:textSize="@dimen/_12sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">


            <TextView
                android:id="@+id/row_txt_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" زیر برند"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_brand"
                android:text="تولید یا وارد کننده:"
                android:textSize="@dimen/_12sdp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/row_txt_subcategory1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" برند"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_brand"
                android:text="گروه محصول:"
                android:textSize="@dimen/_12sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/row_txt_subcategory2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" زیر برند"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_brand"
                android:text="زیر گروه محصول:"
                android:textSize="@dimen/_12sdp" />

    </LinearLayout>


</LinearLayout>
